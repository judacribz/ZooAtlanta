<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivProgressGif"
        android:layout_height="@dimen/dimen_progress"
        android:layout_width="@dimen/dimen_progress"
        android:contentDescription="@null"
        android:src="@drawable/loading" />

    <TextView
        android:id="@+id/tvProgressLoading"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fontFamily="@font/fjalla"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_title_small" />
</LinearLayout>