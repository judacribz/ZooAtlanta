<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/elevation"
    android:layout_height="@dimen/action_bar_height"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_padding_small"
    android:theme="@style/Widget.AppCompat.PopupWindow">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:theme="@style/Widget.MaterialComponents.AppBarLayout.Surface">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/Widget.MaterialComponents.Toolbar.Surface"
            app:contentInsetLeft="@dimen/margin_padding_zero"
            app:contentInsetStart="@dimen/margin_padding_zero">

            <ImageView
                android:contentDescription="@string/cnt_zoo_atlanta_logo"
                android:layout_height="@dimen/logo_height"
                android:layout_width="match_parent"
                android:src="@drawable/zoo_atlanta_banner" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>